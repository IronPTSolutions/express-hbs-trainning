
<h1>Llistat d'episodis de Juego de Tronos</h1>
<div class="row mb-3">
  <div class="col-12 col-md-3">
    <form action="/episodes" method="get" class="row g-3">
      <div class="col-auto">
        <div class="input-group">
          <div class="input-group-text">@</div>
          <input type="text" class="form-control" name="name" placeholder="Busca" value="{{ name }}">
        </div>
      </div>
      <div class="col-auto">
        <button class="btn btn-primary"><i class="fal fa-search"></i>Busca</button> 
      </div>
    </form>
  </div>
</div>




<h3>Episodios listados: {{episodes.length}}</h3>
<div class="row row-cols-1 row-cols-md-3   mx-auto "  style="max-width: 1200px;">

    {{#each episodes as |epi| }}
    {{#with epi}}

    {{>card}}

    {{/with}}
    {{/each}}

</div>