<div class="card border-primary shadow p-3 mb-5  bg-white rounded"> 

    <img class="mx-auto shadow p-0 mb-2  bg-white rounded" src="{{ image.medium }}" alt="..." style="height: 200px;">
    <div class="card-body">
        <h5 class="card-title">{{ name }}</h5>
        <p class="card-text"><small class="text-muted">Season: {{ season }} Episode: {{ number }}</small></p>
        <p class="card-body">{{ summary }}</p>
        <p class="card-text"><small class="text-muted">{{ tagline }}</small></p>
    </div>
</div>